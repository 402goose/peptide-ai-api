# Peptide AI - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================

# OpenAI API key (required for embeddings and chat)
OPENAI_API_KEY=sk-your-openai-key-here

# Master API key for admin access (change in production!)
PEPTIDE_AI_MASTER_KEY=dev-key-change-me

# =============================================================================
# Database
# =============================================================================

# MongoDB connection string
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=peptide_ai

# =============================================================================
# Vector Database
# =============================================================================

# Weaviate URL
WEAVIATE_URL=http://localhost:8080

# Weaviate API key (only needed for Weaviate Cloud)
WEAVIATE_API_KEY=

# =============================================================================
# Caching
# =============================================================================

# Redis URL
REDIS_URL=redis://localhost:6379

# =============================================================================
# Data Sources
# =============================================================================

# NCBI/PubMed API key (optional, increases rate limit from 3 to 10 req/sec)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# Reddit API credentials (for Reddit adapter)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=peptide-ai:v0.1.0

# Firecrawl API key (for web scraping)
FIRECRAWL_API_KEY=

# =============================================================================
# Rate Limiting
# =============================================================================

# Default rate limit (requests per minute)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# =============================================================================
# OpenAI Model Config
# =============================================================================

# Model for chat responses
OPENAI_MODEL=gpt-4o

# Model for embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Environment
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level
LOG_LEVEL=INFO
